{
  "name": "@sed/cli",
  "version": "0.0.1",
  "description": "SED command-line interface for semantic entropy analysis",
  "type": "module",
  "license": "MIT",
  "author": "Stevo <sgbilod@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgbilod/sed.git",
    "directory": "apps/cli"
  },
  "keywords": [
    "sed",
    "entropy",
    "semantic",
    "diff",
    "cli",
    "code-analysis"
  ],
  "bin": {
    "sed": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "clean": "rimraf dist .turbo node_modules",
    "lint": "eslint src --ext .ts --fix",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sed/core": "workspace:*",
    "@sed/git": "workspace:*",
    "@sed/shared": "workspace:*",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^16.4.0",
    "ora": "^8.0.0",
    "pretty-bytes": "^6.1.1",
    "terminal-link": "^3.0.0"
  },
  "devDependencies": {
    "@sed/config": "workspace:*",
    "@types/node": "^20.11.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
